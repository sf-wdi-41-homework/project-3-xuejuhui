<!DOCTYPE html>
<html>
  <head>
    <title>REat</title>
    <%= csrf_meta_tags %>



    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  </head>

  <body>
    <!-- Navigation -->


 <!-- this will be the line of testing -->
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Start Bootstrap</a>
 
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto navbar-right">
           <% if current_user %>
              <li class="nav-link"><%= link_to "Profile", user_path(current_user) %></li>
              <li class="nav-link"><%= link_to "Log Out", logout_path %></li>
              <li class="nav-link"><%= link_to "Recipe", recipes_path%></li>
              <li class="nav-link"><%= link_to "Restaurant", restaurants_path%></li>
            <% else %>
              <li class="nav-link"><%= link_to "Sign Up ", new_user_path %></li>
              <li class="nav-link"><%= link_to "Log In", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

















    <% flash.each do |name, msg| %>
    <div id="flash-message" class="<%= name %>">
      <div class="container">
        <p>
          <%= name.capitalize %>: <%= msg %>
        </p>
      </div>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
